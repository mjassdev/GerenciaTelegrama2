@model GerenciaTelegrama.Models.Outros

@{
    ViewBag.Title = "LICITAÇÕES";
}

<h2>LICITAÇÕES E DIVERSOS</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() <hr />
    <div class="form-horizontal">
        <div class="form-group">
            DOCUMENTO
            <div class="col-md-5">
                @Html.EditorFor(model => model.CodOutros, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodOutros, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            DESCRIÇÃO
            <div class="col-md-5">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            NÚMERO DO TELEGRAMA
            <div class="col-md-5">
                @Html.DropDownList("IdTelegrama", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTelegrama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            VALOR
            <div class="col-md-5">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control currency", @type = "text" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            DATA
            <div class="col-md-5">
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control datetimepicker-input" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CONFIRMAR" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VOLTAR", "Index")
</div>


@section Scripts{
    <script src="~/Scripts/3th/moment.js"></script>
    <script src="~/Scripts/3th/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Scripts/3th/jquery.maskMoney.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datetimepicker-input').datetimepicker({
                sideBySide: false,
                format: 'DD/MM/YYYY',
            });

            $('#Data').attr('data-toggle', 'datetimepicker');
            $('#Data').attr('data-target', '#Data');

            $(".currency").maskMoney({ allowNegative: true, thousands: '.', decimal: ',', affixesStay: false });

            $('form').submit(function (e) {
                $('#Valor').val(replaceAll($('#Valor').val(), '.', ''));
            });
        });
    </script>
}