@model IEnumerable<GerenciaTelegrama.Models.Rdm>

@{
    ViewBag.Title = "Index";
}


<div class="card">
    <div class="card-body">
        <h2>RDM</h2>

        <a href="@Url.Action("Create", "Rdm")" class="btn btn-info btn-sm">
            CADASTRAR NOVO
        </a>

        <form method="get" action="@Url.Action("Index")">
            FILTRAR POR PROJETO
            <input type="text" id="filtro" name="filtro" />
            <input type="submit" value="Buscar"  />
        </form>
        <br />


        <table class="table">
            <tr class="text-center">
                <th>
                    NÚMERO DA RDM
                </th>
                <th>
                    NOME DO PROJETO
                </th>
                <th>
                    ÁREA
                </th>
                <th>
                    DATA
                </th>
                <th>
                    FINALIDADE
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.CodRdm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telegrama.NomeProjeto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @item.Data.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Finalidade)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdRdm }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdRdm }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.IdRdm })
                </td>
            </tr>
    }

        </table>



    </div>
</div>